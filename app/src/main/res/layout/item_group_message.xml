<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_message_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_event_pic"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxWidth="240dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/image_event_pic"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Event Title" />

        <TextView
            android:id="@+id/text_message_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/text_event_title"
            app:layout_constraintLeft_toRightOf="@id/image_event_pic"
            app:layout_constraintTop_toBottomOf="@+id/text_event_title"
            tools:text="Text Preview asdlkfjwioeaiejfloaksjdfsadasdfewafdasdfweawe fawdfasdfasdaf" />

        <TextView
            android:id="@+id/text_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:textSize="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="July 4 11:48pm" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/group_message_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
